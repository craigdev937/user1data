{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "module": "NodeNext",
        "target": "ES2020",
        "lib": ["ES2023"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}


